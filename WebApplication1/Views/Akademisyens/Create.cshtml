@model WebApplication1.veritabani.Akademisyen

@{
    ViewBag.Title = "Create";
}
<div style="background-image:url(../../Content/akagiris.jpg);background-repeat:no-repeat;background-position:right center">


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal ">
            <h2>Akademisyen Kaydı </h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <h5 class="control-label col-md-2">Adınız : </h5>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.aka_ad, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.aka_ad, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5 class="control-label col-md-2">Soyadınız : </h5>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.aka_soyad, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.aka_soyad, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5 class="control-label col-md-2">Tc Kimlik Numaranız : </h5>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.aka_tc, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.aka_tc, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h5 class="control-label col-md-2">Bölüm Sorumlusu Musunuz : </h5>
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.aka_sorumlumu)
                        @Html.ValidationMessageFor(model => model.aka_sorumlumu, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <h5 class="control-label col-md-2">Eğitim Verdiğiniz Bölüm : </h5>
                <div class="col-md-10">
                    @Html.DropDownList("bol_kod", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.bol_kod, "", new { @class = "text-danger" })
                </div>
            </div>

            
            <div class="form-group">
                <h5 class="control-label col-md-2">Mailiniz : </h5>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.aka_mail, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.aka_mail, "", new { @class = "text-danger" })
                </div>
            </div>
           <div class="form-group">
                <h5 class="control-label col-md-2">Parolanız : </h5>
                <div class="col-md-10">
                @Html.EditorFor(model => model.aka_parola, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.aka_parola, "", new { @class = "text-danger" })
            </div>
        </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Kaydol" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

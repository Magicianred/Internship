@using WebApplication1.veritabani;

@{
    ViewBag.Title = "StajIncele";
}

 <html>
 <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
     <style>

        #kutu {
            width: auto;
            height: auto;
            float: left;
            padding-bottom: 3em;
            background-color:whitesmoke;
            border-bottom:5px solid #ff006e;
            border-radius:10px 10px;
            
            padding: 10px;
        }

        #kutuic {
            width: auto;
            height: auto;
            float: left;
            padding-bottom: 3em;
            background-color: #ff006e;
            padding: 10px;
        }

         input[type=text]{
            width:65%;
            padding: 8px 8px;
            margin: 6px 0;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            background-position-x:right;
        }
        #secenek {
            background-color:#150a02;
            padding:10px;
         
        }
  
        #menu {
            list-style-type: none;
            width:28%;
            position:fixed ;
            height: 200%;
            overflow: auto;
            background-color:#fe2929;
            padding:90px;
            margin:-130px;
            
        }
        
        #menu2 {
            list-style-type: none;
             padding:30px;
             position:center;
             margin :0;
             margin-left:500px;
         }

    </style>
    <script type='text/javascript'>

           $(document).ready(function() {
           $('input[name=sec]').change(function(){
                $('form').submit();
           });
          });

    </script>
</head>
 <body style="background-color:#150a02">
         <div id="menu">
             <br /><br />
             <h3>Bölümlere Göre Staj</h3>
             <p>

                 @using (Html.BeginForm("Index", "StajBilgis", FormMethod.Get))
                 {
                     <input type="text" class="form-control" id="searchit" name="searchit">
                     <button type="submit" class="btn btn-danger">Ara</button><br />
                    
                     foreach (Bolum b in ViewBag.bolumler)
                     {

                         @Html.RadioButton("sec", @b.bol_kod) @Html.Label(@b.bol_name)
                         <br />
                     }


                 }
             </p>
         </div>
     
                 @foreach (StajBilgi staj in ViewBag.stajlar)
                 {
                     if (@staj.staj_onaylandimi)
                     {
                        <div class="col-md-6" id="menu2">
                            <div id="secenek">
                                <center> <h3 style="color:#d13b3b">@staj.Ogrenci.ogr_ad @staj.Ogrenci.ogr_soyad</h3> </center><hr />
                                <p >
                                    <h5 style="color:white">
                                        Firma Adi : @staj.firma_adi 
                                    </h5>
                                    <hr/>
                                    <br />
                                    <h5 style="color:white">
                                        Çalışma Alanı : @staj.calisma_alani                                    
                                    </h5> 
                                    <hr />
                                    <br /> 
                                    <h5 style="color:white">
                                        Kullanılan Teknolojiler : @staj.kullanilan_teknolojiler
                                    </h5> 
                                </p>
                                <center><button type="button" class="btn btn-default" style="background-color:white">@Html.ActionLink("Details", "Details", new { id = staj.staj_id }) </button></center>
                            </div>
                            </div>

                     }

             }

 </body>

        </html>




